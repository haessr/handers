<div class="container custom-productshow-container" data-controller="upload">
<br>
  <h2>Upload a Product</h2>
  <div data-controller="location">
  <%= simple_form_for(@product) do |f| %>
    <%= f.input :title,
                placeholder: 'Title',
                label: false %>
    <%= f.input :description,
                placeholder: 'Description',
                label: false %>
    <%#= f.input :category,
                placeholder: 'Category',
                label: false %>
    <%= f.input :location,
                placeholder: 'Location',
                label: false %>
    <%= f.input :min_price,
                input_html: { min: '0' },
                placeholder: 'Min price',
                label: false %>
    <hr/>

    <%= f.association :npo %>


<!--     < #%= f.input :npo,

                label: 'Which NPO will you be donating to?',
