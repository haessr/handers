                label_method: :second, value_method: :first %> -->

    <%#= f.association :npos,
                label: 'Which NPO will you be donating to?'%>


    <%= f.input :photos,
                as: :file,
                input_html: {multiple: true,  class: 'inputfile-products inputfile-products__photos', data: { action: 'change->upload#previewImage' }},
                label: 'Choose photos',
                label_html: {class: 'rounded-label-reverse-product'}%>

    <div data-target="upload.preview">

    </div>
    <%= f.button :submit, "Save", class: 'btn btn-handers main-btn main-btn-fw' %>
    <% end %>
  </div>
</div>
