<div class="container custom-login-container">
  <div class="justify-content-center">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8">
      <h2 class="text-center">Update your house</h2>
        <div class="col-12 form-group" data-controller="location">
          <%= simple_form_for(@product) do |f| %>
              <%= f.input :title %>
              <%= f.input :description %>
              <%= f.input :location %>
              <%= f.input :min_price %>
              <%#<%= f.input :location, collection: [['Seville', 'Seville'], ['Madrid', 'Madrid'], ['Barcelona', 'Barcelona']], label_method: :second, value_method: :first %>
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <%= f.button :submit, "Save", class: 'btn btn-primary' %>
          <% end %>
      <%= link_to "back to products", products_path %>
    </div>
  </div>
</div>
