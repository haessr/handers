<div class="container mb-3 text-decoration-none">
    <%= link_to "â† Back", :back %>
</div>
<div class="container custom-product-container">
  <h2 class="text-center mt-3">Update your product</h2>
    <div class="col-12 form-group" data-controller="location">
      <%= simple_form_for(@product) do |f| %>
          <%= f.input :title,
                      placeholder: 'Title',
                      label: false %>
          <%= f.input :description,
                      placeholder: 'Description',
                      label: false %>
          <%= f.input :location,
                      placeholder: 'Location',
                      label: false  %>
          <%= f.input :min_price,
                      input_html: { min: '0' },
                      placeholder: 'Min price',
                      label: false %>
                    <hr/>

          <%= f.association :npo,
                      label: 'Which NPO will you be donating to?' %>

          <%= f.input :photos,
                      as: :file,
                      input_html: {multiple: true,  class: 'inputfile-products inputfile-products__photos'},
                      label: 'Choose photos',
                      label_html: {class: 'rounded-label-reverse-product'}%>
          <%= f.button :submit, "Save", class: 'btn main-btn main-btn-fw'  %>
      <% end %>
    </div>
</div>
