<div class="container">
  <br>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8">
      <%= link_to "← Back", :back %>

      <div class="">
        <h2 class="text-center">Add an NPO/Charity Cause</h2>
        <div class="col-12 form-group">

          <%= simple_form_for([@npo]) do |f| %>
            <div class="form-inputs">
                <%= f.input :name %>
                <%= f.input :description %>
                <%= f.input :url %>
                <%= f.input :photo,
                            as: :file,
                            input_html: {multiple: false, class: 'inputfile-products inputfile-products__photos'},
                            label: 'Choose a logo',
                            label_html: {class: 'rounded-label-reverse-product'} %>

                <%#= f.input :photos,
                          as: :file,
                          input_html: {multiple: true,  class: 'inputfile-products inputfile-products__photos'},
                          label: 'Choose photos',
                          label_html: {class: 'rounded-label-reverse-product'}%>
            </div>
            <div class="d-flex justify-content-between">
              <div class="form-actions w-100">
                <%= f.button :submit, "Add", class: 'btn btn-handers w-100' %>
              </div>
            </div>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
