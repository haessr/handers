
<div class="container mr-100">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link handers__pill active" id="pills-selling-tab" data-toggle="pill" href="#pills-selling" role="tab" aria-controls="pills-selling" aria-selected="true">As seller</a>
    </li>
    <li class="nav-item">
      <a class="nav-link handers__pill" id="pills-buying-tab" data-toggle="pill" href="#pills-buying" role="tab" aria-controls="pills-buying" aria-selected="false">As Buyer</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-selling" role="tabpanel" aria-labelledby="pills-selling-tab">
      <% if @chatrooms_as_seller.length > 0 %>
        <div class="list-group">
          <% @chatrooms_as_seller.each do |chatroom| %>
            <%= link_to chatroom.title, chatroom_path(chatroom), class: 'list-group-item list-group-item-action'%>
          <% end %>
        </div>
      <% else %>
        <div class="container no-products">
          <p>No chats found</p>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade" id="pills-buying" role="tabpanel" aria-labelledby="pills-buying-tab">
      <% if @chatrooms_as_buyer.length > 0 %>
        <div class="list-group">
          <% @chatrooms_as_buyer.each do |chatroom| %>
            <%= link_to chatroom.title, chatroom_path(chatroom), class: 'list-group-item list-group-item-action'%>
          <% end %>
        </div>
      <% else %>
        <div class="container no-products">
          <p>No chats found</p>
        </div>
      <% end %>
    </div>

  </div>
</div>