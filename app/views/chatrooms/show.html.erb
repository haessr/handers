<div class="container chatroom"  data-controller="chatroom">
  <%#<%= link_to 'Go to product', product_path(@chatroom.product_id)%>
  <div class="chat-header">
    <%= link_to :back, class: 'left-arrow' do %>
      <i class="fas fa-arrow-alt-circle-left"></i>
    <% end %>
    <h4>
      <%= @chatroom.title %>
    </h4>
  </div>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>" data-target="chatroom.messages">
    <% @chatroom.messages.each do |message| %>
      <div class="message <%= message.user == current_user ? "right" : "left" %>" id="message-<%= message.id %>" data-author="<%= message.user_id%>">
        <div class="message-content"><%= message.content %></div>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Message" %>
    <%= f.button :submit, class: 'btn btn-handers' %>
  <% end %>
</div>
