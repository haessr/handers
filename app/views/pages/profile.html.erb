

<% if current_user %>
  <%if current_user.avatar.attachment.nil? %>
    <%= image_tag 'https://avatars.dicebear.com/api/male/john.svg?mood[]=happy', :width => 40, :height => 40, :crop => :fill, class: 'avatar-menubar'%>
  <% else %>
    <%= cl_image_tag(current_user.avatar.key, :width => 40, :height => 40, :crop => :fill, class: 'avatar-menubar')%>
  <% end %>
<% end  %>