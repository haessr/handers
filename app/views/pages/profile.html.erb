
<div class="container container-profile-header">
  <div class="profile__avatar">
    <% if current_user %>
      <%if current_user.avatar.attachment.nil? %>
        <%= image_tag 'https://avatars.dicebear.com/api/male/john.svg?mood[]=happy', :width => 100, :height => 100, :crop => :fill, class: 'avatar-menubar'%>
      <% else %>
        <%= cl_image_tag(current_user.avatar.key, :width => 100, :height => 100, :crop => :fill, class: 'avatar-menubar')%>
      <% end %>
    <% end  %>
  </div>
  <div class="profile__info">
  <p>@<%= current_user.username %></p>
  </div>
  <div class="profile__actions">
    <a href="/users/edit" class="btn btn-primary profile__actions-btn">Edit Profile</a>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary profile__actions-btn'%>
  </div>
</div>

<div class="container container-profile-body">
    <a href="/products/owned" class="btn btn-primary profile__actions-btn-links">My products</a>
    <a href="/orders" class="btn btn-primary profile__actions-btn-links">My Orders</a>
</div>