
<div class="container custom-login-container">
  <h2>Login</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  placeholder: 'Email',
                  label: false %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  placeholder: 'Password',
                  label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary custom-form-btn' %>
    </div>
  <% end %>

    <p class="custom-p-login">or</p> 

    <a href="/users/sign_up" class="btn btn-primary custom-btn-reverse">Sign Up</a>
    <%# <button type="submit" class="btn btn-primary custom-btn-reverse">Sign Up</button> %>
    <a href="/users/password/new" class="custom-forgot-link">Forgot your password?</a>
</div>

