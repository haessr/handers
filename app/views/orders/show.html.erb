<br>
<i class="fas fa-undo"></i> <%= link_to "Back to orders", orders_path, class: "ml-3 pt-2" %>
<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide mt-2" data-ride="carousel" style='height:200;'>
    <div class="carousel-inner" style="border-radius: 15px; height:350px;" >
      <% @order.product.photos.each_with_index do |flat, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <img class="d-block w-100" src="<%= cl_image_path flat.key, aspect_ratio: 1.1, quality: 100, crop: :fill, gravity: :center, class: "d-block" %>" alt="First slide">
      </div>
      <% end %>
    </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
  <div class="container mb-5">
        <br>
        <h2> <%= @order.product.title %></h2>
        <p class="text-muted"> <%= @order.product.description %></p>

    <div class="row">
      <div class= "col-9 my-3 d-flex align-items-center">
        <%if @order.product.user.avatar.attachment.nil? %>
          <div> <%= image_tag 'https://avatars.dicebear.com/api/male/john.svg?mood[]=happy', :width => 50, :height => 50, :crop => :fill, class: 'avatar-menubar'%> </div>
        <% else %>
          <div> <%= cl_image_tag(@order.product.user.avatar.key, :width => 50, :height => 50, quality: 100, :crop => :fill, class: 'avatar-menubar')%> </div>
        <% end %>
        <div class="ml-2"> <strong> <%= @order.product.user.username %> </strong> is donating half of this to: <strong> <%= @order.product.npo %> </strong> </div>
      </div>
      <div class="col-3 d-flex align-items-center flex-row-reverse">
        <button type="button" class="btn btn-info mt-2">Contact</button>
      </div>
    </div>
  </div>
  <div>
    <h4>Your order status:</h4>
      <ul class="list-group">
        <li class="list-group-item">
          <span class="prefix">Order date:</span>
          <span class="label label-success"> <%= @order.created_at %> </span>
        </li>
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
            <div class="d-fex align-content-center">
              <div>
                <span class="prefix">Order status:</span>
                <span class="label label-success">Pending</span>
              </div>
            </div>
            <div>
              <button type="button" class="btn btn-danger">Cancel</button>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <strong><span class="prefix">Order total:</span>
          <span class="label label-success"> <%= @order.price %> â‚¬ </span></strong>
        </li>
        <li class="list-group-item">
          <span class="prefix">As a "Hander" you have donated half of the total price to: </span>
          <span class="label label-success"> <strong> <%= @order.npo %> </strong> </span>
        </li>
        <li class="list-group-item">You can checkout more information about the cause you had donate the following link:  <a href=#> <%= @order.npo %> </a></li>
      </ul>
    </div>
    <br>
    <div class="mb-4 mt-2">
      <h4>Shipping status</h4>
      <div class="progress mt-3">
        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Product was sent</div>
      </div>
    </div>
    <br>
</div>
