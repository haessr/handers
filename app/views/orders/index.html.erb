

<div class="container">
<h2 class="mr-100">My orders</h2>
  <div class="row">
    <div>
      <% @orders.each do |order| %>
          <div class="col-12 my-4">

              <div class="card d-flex">
                <img class="card-img-top" src="<%= cl_image_path order.product.photos.first.key, quality: 100, crop: :fill %>" alt="Card image cap">
                <div class="card-body">
                  <h4 class="mb-0 price-category"><i class="fas fa-hand-holding-usd"></i> <%= order.price %>â‚¬</h4>
                  <h6 class="mb-0"> <%= order.product.title.capitalize %></h6>
                  <p class="text-muted mb-0 p-description"> <%= order.product.description.capitalize %></p>
                </div>

                <% if order.status == "pending" %>
                  <a class="btn px-4 pending" href="/orders/<%= order.id %>" role="button"><%= order.status.capitalize %> </a>

                <% elsif order.status == "completed" %>
                  <a class="btn px-4 completed" href="/orders/<%= order.id %>" role="button"><%= order.status.capitalize %> </a>

                <% else order.status == "cancelled" %>
                  <a class="btn px-4 cancelled" href="/orders/<%= order.id %>" role="button"><%= order.status.capitalize %> </a>

                <% end %>


              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
